<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".activities.Admin.MyUsersActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
    <LinearLayout
        android:id="@+id/activity_mentor_chat_recycler_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#22BEA9">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:tint="@color/white"
                android:padding="7dp"
                android:clickable="true"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                tools:ignore="UseAppTint"
                android:focusable="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Add Author"
                android:textColor="#FFFFFF"
                />
        </RelativeLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:padding="20dp"
          android:orientation="vertical">
          <ImageView
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:tint="@color/secondary_dark"
              android:padding="7dp"
              android:layout_gravity="center"
              android:src="@drawable/ic_baseline_person_24"
              tools:ignore="UseAppTint"
              />
           <EditText
              android:id="@+id/authorName"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:background="@drawable/rounded_edittext"
              android:hint="enter author name"
               android:layout_marginTop="20dp"
              android:inputType="text"
              android:paddingLeft="20dp"
              android:textColor="#000000"
               android:maxLines="1"
              android:textColorHint="#9E9E9E"
              />

          <EditText
              android:id="@+id/etAuthAge"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:background="@drawable/rounded_edittext"
              android:hint="enter age"
              android:layout_marginTop="20dp"
              android:inputType="number"
              android:paddingLeft="20dp"
              android:maxLines="1"
              android:textColor="#000000"
              android:textColorHint="#9E9E9E"
              />
          <EditText
              android:id="@+id/authGender"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:background="@drawable/rounded_edittext"
              android:hint="enter author gender"
              android:layout_marginTop="20dp"
              android:inputType="text"
              android:paddingLeft="20dp"
              android:textColor="#000000"
              android:maxLines="1"
              android:textColorHint="#9E9E9E"
              />
          <EditText
              android:id="@+id/etRating"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:background="@drawable/rounded_edittext"
              android:hint="enter rating"
              android:layout_marginTop="20dp"
              android:inputType="numberDecimal"
              android:paddingLeft="20dp"
              android:maxLines="1"
              android:textColor="#000000"
              android:textColorHint="#9E9E9E"
              />
          <Button
              android:id="@+id/btnAddBook"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:layout_marginTop="40dp"
              android:text="Add Author"
              android:layout_gravity="right"
              android:textSize="18sp"
              android:textColor="@color/white"
              android:background="@color/secondary"
              />
      </LinearLayout>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>